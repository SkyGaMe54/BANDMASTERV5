                <div class="text-4xl md:text-5xl font-bold text-accent mb-2">
                  {stat.value}{stat.symbol}
                </div>
                <div class="text-muted">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recent Results -->
